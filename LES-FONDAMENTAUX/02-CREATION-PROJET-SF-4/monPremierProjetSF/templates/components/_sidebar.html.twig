{#{{ dump(articles) }}#}

<!--colright-->
<div class="col-md-4 col-sm-12">
    <!--tab popular-->
    <ul role="tablist" class="tab-popular">
        <li class="active">
            <a href="#tab1" role="tab" data-toggle="tab">
                DERNI&Egrave;RE PUBLICATIONS
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <ul class="list-news-popular">
                {% for article in articles %}
                    <li>
                        <a href="{{ url('index_article', {
                            libellecategorie : article.categorie.libelle | slugify,
                            slugarticle      : article.titre | slugify,
                            id        : article.id }) }}">
                            <img alt="{{ article.titre }}" src="{{ asset('images/product/' ~ article.featuredimage) }}">
                        </a>
                        <h3><a href="{{ url('index_article', {
                                libellecategorie : article.categorie.libelle | slugify,
                                slugarticle      : article.titre | slugify,
                                id        : article.id }) }}">{{ article.titre }}</a></h3>
                        <div class="meta-post">
                            <a href="javascript:void(0)">
                                {{ article.auteur.prenom ~ ' ' ~ article.auteur.nom }}
                            </a>
                            <em></em>
                            <span>
                                {{ article.datecreation | date('d/m/Y') }}
                            </span>
                        </div>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <!-- subcribe box-->
    <div class="subcribe-box">
        <h3>NEWSLETTER</h3>
        <p>Inscrivez-vous pour recevoir nos derni√®res publications.</p>
        <input type="text" placeholder="Votre Email..." />
        <button class="my-btn">Je m'inscris</button>
    </div>
    <!-- connect us-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				SUIVEZ-NOUS
			</span>
        </div>
        <ul class="list-social-icon">
            <li>
                <a href="javascript:void(0)" class="facebook">
                    <i class="fa fa-facebook"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" class="twitter">
                    <i class="fa fa-twitter"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" class="google">
                    <i class="fa fa-google"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" class="youtube">
                    <i class="fa fa-youtube-play"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" class="pinterest">
                    <i class="fa fa-pinterest-p"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" class="rss">
                    <i class="fa fa-rss"></i>
                </a>
            </li>
        </ul>
    </div>

    <!-- special post-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				En Avant
			</span>
        </div>
        <div class="list-special">
            {% for article in special %}
                <article class="news-two-large">
                    <a href="{{ url('index_article', {
                        libellecategorie : article.categorie.libelle | slugify,
                        slugarticle      : article.titre | slugify,
                        id        : article.id }) }}">
                        <img alt="{{ article.titre }}" src="{{ asset('images/product/' ~ article.featuredimage) }}">
                    </a>
                    <h3><a href="{{ url('index_article', {
                            libellecategorie : article.categorie.libelle | slugify,
                            slugarticle      : article.titre | slugify,
                            id        : article.id }) }}">{{ article.titre }}</a></h3>
                    <div class="meta-post">
                        <a href="javascript:void(0)">
                            {{ article.auteur.prenom ~ ' ' ~ article.auteur.nom }}
                        </a>
                        <em></em>
                        <span>
                            {{ article.datecreation | date('d/m/Y') }}
                        </span>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
</div>